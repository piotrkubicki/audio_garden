<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShowcaseStyleBlue" parent="ShowcaseView">
        <item name="sv_backgroundColor">@color/colorPrimary</item>
        <item name="sv_showcaseColor">@color/colorPrimaryDark</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/GreenTextTitle</item>
        <item name="sv_detailTextAppearance">@style/GreenTextDetails</item>
    </style>

    <style name="GreenTextTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#00fa33</item>
    </style>

    <style name="GreenTextDetails" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">#000000</item>
    </style>
</resources>